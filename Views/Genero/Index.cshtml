@model Registro.Models.GeneroModel
@{
    ViewBag.Title = "Registro de generos";
}

<h2>Formulario para el registro de generos</h2>

@using (Html.BeginForm("Index", "Genero", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @placeholder = "Ingresa la abreviacion del genero" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Nombre)
        @Html.TextBoxFor(n => n.Nombre, new { @class = "form-control", @placeholder = "Ingresa el nombre del genero" })
        @Html.ValidationMessageFor(n => n.Nombre, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Agregar</button>
        <a href="/Genero/ObtenerGeneros" class="btn btn-success">Ver lista de genero &raquo;</a>
    </div>
}
