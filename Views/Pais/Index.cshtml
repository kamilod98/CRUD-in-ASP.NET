@model Registro.Models.PaisModel
@{
    ViewBag.Title = "Registro de paises";
}

<h2>Formulario para el registro de paises</h2>

@using (Html.BeginForm("Index", "Pais", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @placeholder = "Ingresa la abreviacion del pais" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Nombre)
        @Html.TextBoxFor(n => n.Nombre, new { @class = "form-control", @placeholder = "Ingresa el nombre del pais" })
        @Html.ValidationMessageFor(n => n.Nombre, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Agregar</button>
        <a href="/Pais/ObtenerPaises" class="btn btn-success">Ver lista de paises &raquo;</a>
    </div>
}

